generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @default(uuid()) @db.Text
  email             String    @unique @db.Char(40)
  name              String    @db.Char(40)
  password          String    @db.Char(255)
  email_verified_at DateTime?
  phone_number      String?   @db.Char(14)
  photo_url         String?   @db.VarChar(300)
  reset_password    String?   @db.Char(255)
  reset_password_at DateTime?
  created_at        DateTime  @default(now())
}
